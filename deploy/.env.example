# Aether-Realist 部署配置模板

# 您的真实域名 (用于 Caddy 自动化 TLS)
DOMAIN=your-domain.com

# 预共享密钥 (PSK)，客户端连接时需一致
PSK=your_super_secret_token

# 数据记录分片大小（字节），可选：4096 / 8192 / 16384
RECORD_PAYLOAD_BYTES=16384

# 流控窗口档位：conservative / normal / aggressive
WINDOW_PROFILE=normal

# 性能诊断日志（1 开启，0 关闭）
PERF_DIAG_ENABLE=0
PERF_DIAG_INTERVAL_SEC=10

# QUIC 窗口手工覆盖（单位：字节；留空=跟随 WINDOW_PROFILE）
QUIC_INITIAL_STREAM_RECV_WINDOW=
QUIC_INITIAL_CONN_RECV_WINDOW=
QUIC_MAX_STREAM_RECV_WINDOW=
QUIC_MAX_CONN_RECV_WINDOW=
